<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Contact">

    <RelativeLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/homeicon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/saucejaicon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAUCEJA"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#84c142"
            android:textSize="20dp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbar">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_alignParentBottom="true"
            android:id="@+id/bottomNavigation3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#ffffff"
            app:itemIconTint="@drawable/bottom_navigation_item_colors"
            app:itemTextColor="#84c142"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottomNavigation3"
            android:background="@drawable/contactus">

            <RelativeLayout
                android:id="@+id/supporttitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="20dp">

                <TextView
                    android:id="@+id/supporthead1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assistances"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/supporttitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/supporttitle1"
                android:layout_margin="20dp">

                <TextView
                    android:id="@+id/supporthead2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="We are happy to be in touch with you always.."
                    android:textColor="#000000"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/supporthead3"
                    android:layout_below="@id/supporthead2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="For any queries and support do contact us..."
                    android:textColor="#000000"
                    android:layout_marginTop="10dp"
                    android:textSize="16dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/supporttitle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/supporttitle2"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/supportgmail"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/gmail"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="120dp"/>

                <ImageView
                    android:id="@+id/supportphone"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/call"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="120dp"/>

            </RelativeLayout>




        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>